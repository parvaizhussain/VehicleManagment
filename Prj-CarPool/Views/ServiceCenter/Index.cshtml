<!-- Toast with Placements -->

<input type="text" class="form-control navigationId" hidden="hidden" />

<div class="card">
    <div class="card-header border-bottom">
        <h5 class="card-title mb-3">Service Center</h5>

    </div>


    <div class="card-datatable table-responsive mytable">
        <table class="datatables-users-mytable table border-top">
            <thead>
                <tr>
                    <th hidden></th>
                    <th>Id</th>
                    <th>Service Center Name</th>
                    <th>Dealer</th>
                    <th>Dealer Type</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>




   




    <!-- Offcanvas to add new user -->
    <div class="modal fade" tabindex="-1" id="offcanvasCenter" aria-labelledby="modalAddServCent">
        <!--offcanvasAddUser-->
        <div class="modal-dialog modal-lg modal-simple modal-edit-user">
            <div class="modal-content p-3 p-md-5">
        
                <div class="modal-body">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="text-center mb-4">
                        <h3 class="mb-2">Add Service Center</h3>
                        <p class="text-muted">Add new Service Center</p>
                    </div>
            <form class="add-new-user pt-0" id="addNewUserForm1" onsubmit="return false">

                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Service Center</label>
                    <input type="text" class="form-control Addservicenameadd onlyalphabetallowwithspace" />
                    <p class="error-message">* Service Center Name Required</p>
                </div>

                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Contant Number</label>
                    <input type="text" class="form-control Addservicecontactadd" />
                    <p class="error-message">* Contant Number Required</p>
                </div>


                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Contant Person Name</label>
                    <input type="text" class="form-control Addservicepersonadd" />
                    <p class="error-message">* Contant Person Name Required</p>
                </div>
                <div class="mb-3">

                  <label class="form-label">Service Center Address</label>
                    <input type="text" class="form-control Addserviceaddressadd" />

                </div>


                <div class="mb-3">
                    <span class="stred">*</span><label class="form-label"> Dealer Type</label>
                    <div class="form-check">
                        <input name="flexRadioDefault" class="form-check-input isdealer" type="radio" value="" id="authorizeddealer" value="Authorized" checked>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Authorized Dealer
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input isdealer" type="radio" name="flexRadioDefault" id="unauthorizeddealer" value="Unauthorized" >
                        <label class="form-check-label" for="flexRadioDefault2">
                            Unauthorized Dealer
                        </label>
                    </div>

                    <p class="error-message">* Dealer Type Required</p>
                </div>

                <div class="mb-3 isdealerauth">
                           <span class="stred">*</span><label class="form-label">Dealer</label>
                            <select id="DealerList" class="select2 form-select" data-allow-clear="true">
                            </select>
                </div>



                <button type="button" class="btn btn-primary me-sm-3 me-1" onclick="SaveVC()">Submit</button>
                <button type="reset" class="btn btn-label-secondary" id="btnCancelSave" data-bs-dismiss="modal">Cancel</button>
            </form>
        </div>
        </div>
        </div>
    </div>






    <!-- Offcanvas to Edit new Navigation -->
    <div class="modal fade" tabindex="-1" id="offcanvasEditCenter" aria-labelledby="offcanvasEditCenter">
        <!--offcanvasAddUser-->
        <div class="modal-dialog modal-lg modal-simple modal-edit-user">
            <div class="modal-content p-3 p-md-5">
        
        <div class="modal-body">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="text-center mb-4">
                        <h3 class="mb-2">Edit Service Center</h3>
                        <p class="text-muted">Update Service Center</p>
                    </div>
            <form class="add-new-user pt-0" id="EditNewUserForm" onsubmit="return false">

                <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
                    <div class="form-group" hidden="hidden">

                        <label>ID</label>
                        <input disabled="disabled" type="text" class="form-control EditserviceId" value="0" />
                    </div>
                </div>

                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Service Center</label>
                    <input type="text" class="form-control Editservicenameadd onlyalphabetallowwithspace" />
                    <p class="error-message">* Service Center Name Required</p>
                </div>

                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Contant Number</label>
                    <input type="text" class="form-control Editservicecontactadd" />
                    <p class="error-message">* Contant Number Required</p>
                </div>


                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Contant Person Name</label>
                    <input type="text" class="form-control Editservicepersonadd" />
                    <p class="error-message">* Contant Person Name Required</p>
                </div>
                <div class="mb-3">

                    <span class="stred">*</span><label class="form-label">Service Center Address</label>
                    <input type="text" class="form-control Editserviceaddressadd" />

                </div>
                        <div class="mb-3">
                            <span class="stred">*</span><label class="form-label"> Dealer Type</label>
                            <div class="form-check">
                                <input name="flexRadioDefault" class="form-check-input isdealer" type="radio" value="" id="authorizeddealer" value="Authorized" checked>
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Authorized Dealer
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input isdealer" type="radio" name="flexRadioDefault" id="unauthorizeddealer" value="Unauthorized">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Unauthorized Dealer
                                </label>
                            </div>

                            <p class="error-message">* Dealer Type Required</p>
                        </div>

                        <div class="mb-3 isdealerauth">
                            <span class="stred">*</span><label class="form-label">Dealer</label>
                            <select id="EditDealerList" class="select2 form-select" data-allow-clear="true">
                            </select>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" for="chkactive">Is Active?</label>
                            <div class="form-check form-switch mb-2 mt-0 ms-2">
                                <input class="form-check-input" type="checkbox" id="chkactive" checked />
                                <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                            </div>
                        </div>
                <button type="button" class="btn btn-primary me-sm-3 me-1" onclick="Editservice()">Edit</button>
                <button type="reset" class="btn btn-label-secondary" id="btnCancelEdit" data-bs-dismiss="modal">Cancel</button>
            </form>
        </div>
        </div>
        </div>

    </div>
</div>


<div class="content-backdrop fade"></div>


