        <div class="d-flex justify-content-between align-items-center row pb-2 gap-3 gap-md-0">
            <div class="col-md-4 user_role"></div>
            <div class="col-md-4 user_plan"></div>
            <div class="col-md-4 user_status"></div>
        </div>
    </div>
    <div class="card-datatable table-responsive">
        <table class="datatables-users-mytable table border-top">
            <thead>
                <tr>
                    <th style="display:none;">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th style="display:none;">
                        @Html.DisplayNameFor(model => model.ShortName)
                    </th>
                    <th style="display:none;">GroupId</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Group)
                    </th>
                    <th>
                        Permitted Menus
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="roleidedit" style="display:none;">@Html.DisplayFor(modelItem => item.Id)</td>
                        <td class="rolenameedit">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td style="display:none;" class="roleshortnameedit">@Html.DisplayFor(modelItem => item.ShortName)</td>
                        <td class="rolegroupidedit" style="display:none;">@Html.DisplayFor(modelItem => item.Group.GroupId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Group.GroupName)</td>
                        <td>
                            <button type="button" class="btn btn-primary menulist_model linkbtns" onclick='getUserRoleId("@item.Id")' ;><i class="fa fa-eye"></i> View</button>
                        </td>

                        <td>
                            @if (UserData.AccessRights.Edit)
                            {

                                <button class="btn btn-primary btn-xs edit_role linkbtns" title="Edit" onclick="edit_role(this)"><i class="fa fa-pencil"></i> Edit</button>
                            }
                            else
                            {
                                <button class="btn btn-primary btn-xs edit_role linkbtns anchor_disabled" title="Edit" onclick="edit_role(this)"><i class="fa fa-pencil"></i> Edit</button>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Offcanvas to add new user -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasAddUser" aria-labelledby="offcanvasAddUserLabel">
        <!--offcanvasAddUser-->

        <div class="offcanvas-header">
            <h5 id="offcanvasAddUserLabel" class="offcanvas-title">Add Role</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body mx-0 flex-grow-0 pt-0 h-100">
            <form class="add-new-user pt-0" id="addNewUserForm">

                <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6 visiblityhidden">
                    <div class="form-group">
                        
                        <label class="visiblityhidden">ID</label>
                        <input type="text" class="form-control roleId visiblityhidden" />
                    </div>
                </div>

                
                
                

                <div class="mb-3">

                   

                    <span class="stred">*</span><label class="form-label"> Name</label>
                    <input type="text" class="form-control rolenameadd onlyalphabetallow" />
                    <p class="error-message">* Name Required</p>
                </div>
                <div class="mb-3">
                     
                    <span class="stred">*</span><label class="form-label"> Group</label>
                    <select class="form-control group_list form-select">
                    </select>
                </div>
              
                
              

                



                <div class="mb-3">
                    <span class="stred">*</span><label class="form-label"> Menu List</label>
                    <div class="role_wrapper col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="selectboxes">
                            <ul class="roleselects"></ul>
                        </div>
                        <select name="langOpt[]" multiple="multiple" id="langOpt" class="rolemenulist form-control form-select select2">
                           
                        </select>

                        <p class="error-message">* Role Required</p>
                    </div>
                </div>

                


                
                <button type="button" class="btn btn-primary me-sm-3 me-1 addrolebtn">Submit</button>
                <button type="reset" class="btn btn-label-secondary" data-bs-dismiss="offcanvas">Cancel</button>
            </form>
        </div>

    </div>
</div>
